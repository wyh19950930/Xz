<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.me.AccountSecurityActivity">

    <include
        android:id="@+id/include_act_account_security"
        layout="@layout/include_title"/>

    <LinearLayout
        android:id="@+id/ll_act_account_security_pwd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/my_icon_alter_default"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_14"
            android:text="修改密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/my_icon_arrow_highlight"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:background="#fbfbfb"/>
    <LinearLayout
        android:id="@+id/ll_act_account_security_logoff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/my_icon_logout_default"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_14"
            android:text="注销账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="@dimen/dp_10"
            android:src="@mipmap/my_icon_arrow_highlight"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"/>
    </LinearLayout>

</LinearLayout>