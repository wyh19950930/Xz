<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.homepage.FenceSettingActivity">

    <include
        android:id="@+id/include_act_fence_set"
        layout="@layout/include_title"/>

    <com.amap.api.maps.MapView
        android:id="@+id/map_act_fence_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_act_fence_set"/>
    <LinearLayout
        android:id="@+id/ll_act_fence_set_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_10"
        android:elevation="1dp"
        android:translationZ="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/include_act_fence_set"
        android:background="@drawable/btn_white_round_30_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/search_icon_highlight"/>

        <EditText
            android:id="@+id/et_act_fence_set_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_10"
            android:hint="请输入地址名称"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_default"
            android:background="@null"/>
    </LinearLayout>
    <!--拖动条-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:padding="@dimen/dp_4"
        android:background="@drawable/btn_white_round_30_background"
        android:layout_below="@+id/ll_act_fence_set_search"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/btn_act_fence_set_reduce"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/btn_blue_oval_background"
            android:textColor="@color/white"
            android:text="一"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="200米"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_default"/>
        <SeekBar
            android:id="@+id/seek_act_fence_set"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:max="4"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@mipmap/seek_circle_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_6"
            android:text="1000米"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_default"/>
        <android.widget.Button
            android:id="@+id/btn_act_fence_set_add"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/btn_blue_oval_background"
            android:textColor="@color/white"
            android:text="十"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"/>


    </LinearLayout>

    <!--搜索地址列表-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rlt_act_fence_set_select_search"
        android:descendantFocusability="blocksDescendants"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240"
        android:background="@drawable/btn_yy_background"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_act_fence_set_select_search"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <android.widget.Button
            android:id="@+id/btn_act_fence_setSelect_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="确定"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:background="@drawable/btn_blue_round_30_background"/>
    </LinearLayout>

    <!--围栏信息-->
    <LinearLayout
        android:id="@+id/ll_act_fence_set_wl_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_yy_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="围栏名称"/>
            <EditText
                android:id="@+id/et_act_fence_set_wl_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_default"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:maxLength="7"
                android:hint="输入名称"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="围栏位置"/>
            <EditText
                android:id="@+id/et_act_fence_set_wl_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_default"
                android:enabled="false"
                android:background="@null"
                android:maxLines="2"
                android:hint="自动获取位置"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/eee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="告警类型"/>
            <RadioGroup
                android:id="@+id/rgp_act_fence_set_wl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_10"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbt_act_fence_set_wl_out"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="出去预警"/>
                <RadioButton
                    android:id="@+id/rbt_act_fence_set_wl_in"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="进入预警"/>
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/eee"/>

        <LinearLayout
            android:id="@+id/ll_act_fence_set_jg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:text="定位间隔"/>
            <RadioGroup
                android:id="@+id/rgp_act_fence_set_jg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_10"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbt_act_fence_set_jg_10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="10分钟"/>
                <RadioButton
                    android:id="@+id/rbt_act_fence_set_jg_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5分钟"/>
                <RadioButton
                    android:id="@+id/rbt_act_fence_set_jg_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1分钟"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/eee"/>
        <android.widget.Button
            android:id="@+id/btn_act_fence_set_wl_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="保 存"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:background="@drawable/btn_blue_round_30_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_act_fence_set_wl_point"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_below="@+id/include_act_fence_set"
        android:background="@drawable/btn_blue_round_30_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_6"
            android:src="@mipmap/track_icon_current"/>
    </LinearLayout>

</RelativeLayout>