<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_act_hp_add_device_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.homepage.HPAddDeviceActivity">

    <include
        android:id="@+id/include_act_hp_add_device"
        layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_f3f4f8_round_5_background"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_act_hp_add_device_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/img_sm_icon"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"/>

            <android.widget.Button
                android:id="@+id/btn_act_hp_add_device_scan"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/btn_blue_round_30_background"
                android:text="扫描绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*设置扫描二维码在机器左下角"
            android:layout_gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_4"/>

        <LinearLayout
            android:id="@+id/ll_act_hp_add_device_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入SN号添加"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/my_icon_arrow_highlight"/>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_act_hp_add_device_et_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SN1:"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/et_act_hp_add_device_sn"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:hint="请输入设备SN号"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/text_default"
                    android:background="@drawable/et_eeeeee_kuang_background"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SN2:"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/et_act_hp_add_device_sn2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_30"
                    android:hint="请输入设备SN号"
                    android:paddingLeft="@dimen/dp_8"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/text_default"
                    android:background="@drawable/et_eeeeee_kuang_background"/>

            </LinearLayout>
            <android.widget.Button
                android:id="@+id/btn_act_hp_add_device_sn_search"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_gravity="center"
                android:background="@drawable/btn_blue_round_5_background"
                android:textColor="@color/white"
                android:text="确定"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>