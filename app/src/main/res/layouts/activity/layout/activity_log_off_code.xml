<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".ui.activity.me.LogOffCodeActivity">

    <include
        android:id="@+id/include_act_log_off_code"
        layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_act_log_off_code_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/btn_edittext_round_30_background"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_12"
            android:paddingLeft="15dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_edittext_round_30_background">

            <EditText
                android:id="@+id/et_act_log_off_code_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/btn_edittext_round_30_background"
                android:hint="请输入验证码"
                android:layout_centerVertical="true"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="15dp"
                />

            <android.widget.Button
                android:id="@+id/btn_act_log_off_code_code"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:background="@drawable/btn_blue_round_5_background"
                android:layout_alignParentRight="true"
                android:text="发送验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <android.widget.Button
            android:id="@+id/btn_act_log_off_code_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:text="注销"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/btn_blue_round_5_background"/>
    </LinearLayout>
</LinearLayout>