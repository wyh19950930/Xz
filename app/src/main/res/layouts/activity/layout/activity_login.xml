<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.login.LoginActivity">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_act_login_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="使用小志云享账号登录"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp_20"
            android:singleLine="false"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_act_login_register"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:text="注册"
            android:textSize="@dimen/sp_15"/>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_act_login_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_act_login_admin_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/btn_edittext_round_30_background"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_13"
                android:paddingLeft="@dimen/dp_15"
                />
            <EditText
                android:id="@+id/et_act_login_admin_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/btn_edittext_round_30_background"
                android:hint="请输入密码（格式为6-20位数字加字母）"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_15"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_act_login_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:orientation="horizontal"
                android:background="@drawable/btn_edittext_round_30_background">

                <Spinner
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="match_parent"/>
                <View
                    android:visibility="gone"
                    android:layout_width="1.5dp"
                    android:layout_height="@dimen/dp_20"
                    android:background="#bbbbbb"
                    android:layout_gravity="center"
                    />
                <EditText
                    android:id="@+id/et_act_login_code_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/btn_edittext_round_30_background"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_15"
                    />
            </LinearLayout>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/bt_act_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:enabled="false"
            android:text="获取短信验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/btn_grey_round_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_act_login_code_pwd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="密码登录"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_act_login_forgot_pwd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:gravity="right"
                android:text="忘记密码？"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp_15"/>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_default"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="其他登录方式"
                android:textColor="@color/gray"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:background="@color/text_default"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_35"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/wx_login_icon"/>
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/qq_login_icon"
                android:layout_marginLeft="@dimen/dp_70"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="left|center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_act_login_yx_zc"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:buttonTint="@color/blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_act_login_yh_xy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:text="《用户协议》"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_act_login_ys_zc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:text="《隐私政策》"/>
    </LinearLayout>

</LinearLayout>