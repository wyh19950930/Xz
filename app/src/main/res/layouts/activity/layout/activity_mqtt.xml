<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mqtt.MqttActivity">

    <include
        android:id="@+id/include_act_mqtt"
        layout="@layout/include_title"/>

    <TextView
        android:id="@+id/tv_mqtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试mqtt"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_mqtt_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备坐标"/>
            <Button
                android:id="@+id/bt_mqtt_csq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信号强度"/>
            <Button
                android:id="@+id/bt_mqtt_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备电量"/>
            <Button
                android:id="@+id/bt_mqtt_open_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启用power键"/>
            <Button
                android:id="@+id/bt_mqtt_close_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁用power键"/>
            <Button
                android:id="@+id/bt_mqtt_power_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="power键状态"/>
            <Button
                android:id="@+id/bt_mqtt_open_backlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启背光"/>
            <Button
                android:id="@+id/bt_mqtt_close_backlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭背光"/>
            <Button
                android:id="@+id/bt_mqtt_backlight_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背光状态"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_mqtt_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁机"/>
            <Button
                android:id="@+id/bt_mqtt_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解锁"/>
            <Button
                android:id="@+id/bt_mqtt_clock_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="锁机状态"/>
            <Button
                android:id="@+id/bt_mqtt_stolen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启被盗模式"/>
            <Button
                android:id="@+id/bt_mqtt_unsteal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解除被盗模式"/>
            <Button
                android:id="@+id/bt_mqtt_stolen_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被盗状态"/>
            <Button
                android:id="@+id/bt_mqtt_gj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关机"/>
            <Button
                android:id="@+id/bt_mqtt_kj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开机"/>
            <Button
                android:id="@+id/bt_mqtt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开关机状态"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>