<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.homepage.PortManagementActivity">

    <include
        android:id="@+id/include_act_port_mgt"
        layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="WIFI端口"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_15" />


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_network"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="蓝牙端口"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_15" />


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_bluetooth"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="USB端口"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_15" />


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_usb"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Type-C端口"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_15" />


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_type_c"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1.3"
                android:gravity="center|left"
                android:text="设备绑定"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.7"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/gray"
                android:text="自动将SSD和主板进行绑定" />
        </LinearLayout>


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_device_bd"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/btn_white_round_background"
        android:elevation="@dimen/dp_1"
        android:orientation="horizontal"
        android:translationZ="@dimen/dp_5">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1.3"
                android:gravity="center|left"
                android:text="异机销毁"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="0.7"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/gray"
                android:text="硬盘(SSD)拔掉后插入其他设备上进行数据销毁" />
        </LinearLayout>


        <com.chuzhi.xzyx.widget.OnOffView
            android:id="@+id/on_off_act_port_mgt_yj_xh"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            app:iconSize="@dimen/dp_25"
            app:offColor="@color/eee"
            app:onColor="@color/blue"
            app:paddingSize="3dp" />

    </LinearLayout>
</LinearLayout>