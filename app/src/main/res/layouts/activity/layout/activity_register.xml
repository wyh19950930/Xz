<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.login.RegisterActivity">

    <include
        android:id="@+id/include_act_register"
        layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_act_register_admin_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/btn_edittext_round_30_background"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_12"
            android:paddingLeft="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_edittext_round_30_background"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_act_register_admin_pwd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/btn_edittext_round_30_background"
                android:hint="请输入密码（格式为6-20位数字加字母）"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"
                android:paddingLeft="15dp"
                />
            <CheckBox
                android:id="@+id/cb_act_register_admin_pwd"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/password_show_selector"
                android:button="@null"
                android:layout_marginRight="@dimen/dp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/btn_edittext_round_30_background"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_act_register_admin_again_pwd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/btn_edittext_round_30_background"
                android:hint="请再次输入密码（格式为6-20位数字加字母）"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"
                android:paddingLeft="15dp"
                />
            <CheckBox
                android:id="@+id/cb_act_register_admin_again_pwd"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/password_show_selector"
                android:button="@null"
                android:layout_marginRight="@dimen/dp_15"
                />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_edittext_round_30_background">

            <EditText
                android:id="@+id/et_act_register_admin_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/btn_edittext_round_30_background"
                android:layout_centerVertical="true"
                android:hint="请输入验证码"
                android:digits="0123456789"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="15dp"
                />

            <android.widget.Button
                android:id="@+id/btn_act_register_admin_code"
                android:layout_width="@dimen/dp_100"
                android:layout_height="match_parent"
                android:background="@drawable/btn_blue_round_5_background"
                android:layout_alignParentRight="true"
                android:text="发送验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                />
        </RelativeLayout>
        <android.widget.Button
            android:id="@+id/btn_act_register_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/btn_blue_round_5_background"/>
        <android.widget.Button
            android:visibility="gone"
            android:id="@+id/btn_act_register_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:enabled="false"
            android:text="已有账号直接登录"
            android:textColor="@color/text_default"
            android:textSize="17sp"
            android:background="@drawable/btn_blue_round_5_background"/>
    </LinearLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="left|center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_act_register_yx_zc"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:buttonTint="@color/blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_act_register_yh_xy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:text="《用户协议》"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_act_register_ys_zc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            android:text="《隐私政策》"/>
    </LinearLayout>
</LinearLayout>