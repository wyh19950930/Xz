<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.homepage.TrackDetailsActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map_act_track_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <include
        android:id="@+id/include_act_track_details"
        layout="@layout/include_title" />



    <LinearLayout
        android:id="@+id/frame_list_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_yy_background"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:background="@drawable/btn_grey_oval_background">

                <com.chuzhi.xzyx.widget.RoundImageViewPlus
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:src="@mipmap/track_icon_computer"
                    app:leftTopRadius="@dimen/dp_30"
                    app:leftBottomRadius="@dimen/dp_30"
                    app:rightTopRadius="@dimen/dp_30"
                    app:rightBottomRadius="@dimen/dp_30"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_act_track_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:text="初志大梁 001"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_round_30_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_act_track_details_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_6"
                        android:text="2023-10-10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_act_track_details_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共计15公里"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:background="@drawable/btn_blue_oval_background" />

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/text_default" />

                <View
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:background="@drawable/btn_red_oval_background" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_act_track_details_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/gray"
                    android:text="开始时间：2023-10-10 10:10:10" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_act_track_details_start_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:minHeight="@dimen/dp_25"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray"
                        android:text="起始地点：北京市阿三大苏打实打实" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_act_track_details_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_25"
                        android:gravity="left|center"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/gray"
                        android:text="结束时间：2023-10-10 10:10:10" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_act_track_details_end_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textSize="@dimen/sp_11"
                    android:textColor="@color/gray"
                    android:text="结束地点：北京市阿三大苏打实打实" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>