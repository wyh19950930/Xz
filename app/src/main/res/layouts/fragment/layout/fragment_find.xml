<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_frag_find_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.find.FindFragment">

    <include
        android:id="@+id/include_find_title"
        layout="@layout/include_title" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/clt_frag_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <com.youth.banner.Banner
                android:id="@+id/banner_frag_find"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:scaleType="centerCrop"
                app:layout_scrollFlags="scroll" />

            <com.chuzhi.xzyx.widget.BannerIndicatorView
                android:id="@+id/banner_indicator_frag_find"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                app:indicator_margins="@dimen/dp_8"
                app:indicator_select_width="@dimen/dp_20"
                app:indicator_select_height="@dimen/dp_5"
                app:indicator_normal_width="@dimen/dp_5"
                app:indicator_normal_height="@dimen/dp_5"/>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_frag_find"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@color/white"
                app:tabIndicatorColor="@color/blue"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextColor="@color/gray"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"/>
            <!--å­tabLayout-->
            <com.google.android.material.tabs.TabLayout
                android:visibility="gone"
                android:id="@+id/tab_frag_find_child"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                app:tabIndicatorColor="@color/blue"
                app:tabIndicatorHeight="0dp"
                app:tabMode="scrollable"
                app:tabMaxWidth="@dimen/dp_100"
                app:tabMinWidth="@dimen/dp_80"
                app:tabSelectedTextColor="@color/blue"
                app:tabTextColor="@color/gray"
                app:tabRippleColor="@null"
                app:tabBackground="@drawable/tab_background"/>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafbfb"
            android:descendantFocusability="beforeDescendants"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include
                android:id="@+id/include_frag_find_none_data"
                layout="@layout/include_none_data"
                android:visibility="gone" />


            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/slt_frag_find"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smart.refresh.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rlv_frag_find"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10" />

                <com.scwang.smart.refresh.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>