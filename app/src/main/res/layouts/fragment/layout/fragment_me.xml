<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fafb"
    android:orientation="vertical"
    tools:context=".ui.fragment.me.MeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_frag_me_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_140"
                    android:background="@mipmap/my_bg_top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_frag_me_top"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center"
                        android:text="我的"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/text_default"/>

                    <LinearLayout
                        android:id="@+id/ll_frag_me_message"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20">

                        <LinearLayout
                            android:id="@+id/ll_frag_me_edit"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_act_me_head"
                                android:layout_width="@dimen/dp_50"
                                android:layout_height="@dimen/dp_50"
                                android:scaleType="fitXY"
                                android:src="@drawable/my_img_portrait_default" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_frag_me_username"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/dp_3"
                                        android:text="我是个昵称"
                                        android:textColor="@color/text_default"
                                        android:textSize="@dimen/sp_15"
                                        android:singleLine="true"
                                        android:maxEms="10"
                                        android:ellipsize="end"
                                        />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/dp_5"
                                        android:src="@mipmap/my_icon_edit_highlight" />
                                </LinearLayout>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dp_0_5"
                                    android:paddingRight="@dimen/dp_8"
                                    android:paddingBottom="@dimen/dp_0_5"
                                    android:text="个性签名:123456789"
                                    android:textColor="@color/text_default"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <android.widget.Button
                            android:id="@+id/btn_frag_me_device_manage"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_25"
                            android:background="@drawable/btn_blue_round_30_background"
                            android:text="设备管理"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_frag_me_praise"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_110"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/btn_white_round_background"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_me_praise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/text_default"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="获赞"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_frag_me_follow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_me_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/text_default"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="关注"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_frag_me_fans"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_me_fan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/text_default"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="粉丝"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/btn_white_round_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="我的社区"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_frag_me_release"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_me_artcle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="我的发布"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center"
                        android:background="#e0e1e1" />

                    <LinearLayout
                        android:id="@+id/ll_frag_me_my_reply"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_me_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:textColor="#30CCD0"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="我的回复"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <View
                        android:visibility="invisible"
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_35"
                        android:layout_gravity="center"
                        android:background="#e0e1e1" />

                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/text_default"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:text="我的活动"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/btn_white_round_background"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_fra_me_security_set"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/my_icon_privacy_default"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/sp_14"
                        android:text="安全设置"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/wd_icon_back_default"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"/>
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#fbfbfb"/>
                <LinearLayout
                    android:id="@+id/ll_frag_me_zh_aq"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/my_icon_account_default"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/sp_14"
                        android:text="账号与安全"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/wd_icon_back_default"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:background="#fbfbfb"/>
                <LinearLayout
                    android:id="@+id/ll_frag_privacy_policy"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/my_icon_privacy_default"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/sp_14"
                        android:text="隐私政策"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/wd_icon_back_default"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="#fbfbfb"/>
                <LinearLayout
                    android:id="@+id/ll_frag_me_about"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/my_icon_about_default"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/sp_14"
                        android:text="关于我们"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:src="@mipmap/wd_icon_back_default"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14"/>
                </LinearLayout>


            </LinearLayout>

            <android.widget.Button
                android:id="@+id/btn_frag_me_out_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/btn_blue_round_30_background"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                />
        </LinearLayout>
    </ScrollView>





</LinearLayout>