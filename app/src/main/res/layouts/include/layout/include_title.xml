<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.find.FindFragment">

    <RelativeLayout
        android:id="@+id/rlt_include_title_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_include_title_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_14"
            android:src="@mipmap/nav_icon_back_highlight"/>
        <TextView
            android:id="@+id/tv_include_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_default"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_include_title_add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/nav_icon_release_highlight"
            android:layout_alignParentRight="true"/>
        <android.widget.Button
            android:visibility="gone"
            android:id="@+id/btn_include_title_add"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/btn_blue_round_30_background"/>
    </RelativeLayout>

</LinearLayout>