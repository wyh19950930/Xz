<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_security_log"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/btn_yy_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_security_log_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="防丢防盗001"
            android:textColor="@color/text_default"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_item_security_log_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出去预警"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_5"
        android:background="@drawable/shape_dashed_line"
        android:layerType="software"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_item_security_log_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="围栏地址：北京市海淀区xxxxxxxxxxxxxxxxxxxxxxxx"
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_13"
        android:maxLines="2"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_item_security_log_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="报警时间："
        android:textColor="@color/gray"
        android:textSize="@dimen/sp_13"
        android:maxLines="2"
        android:ellipsize="end"/>


</LinearLayout>