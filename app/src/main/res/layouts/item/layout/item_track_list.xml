<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_track"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/btn_yy_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_track_start_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:gravity="center|left"
                android:text="开始时间：2020-10-10"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/tv_item_track_end_time"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:gravity="center|left"
                android:text="结束时间：2020-10-10"
                android:textColor="@color/text_default"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_track_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:text="移动距离：10公里"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_11"/>
    </LinearLayout>

</LinearLayout>