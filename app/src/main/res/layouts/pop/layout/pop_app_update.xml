<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/btn_white_round_background">

        <TextView
            android:id="@+id/tv_pop_app_update_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发现新版本"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_pop_app_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="1.xxxxxx\n2.xxxxxx"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="10dp"/>
        <android.widget.Button
            android:id="@+id/btn_pop_app_update_upload"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:text="下 载"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/btn_blue_round_30_background"/>



    </LinearLayout>



</LinearLayout>