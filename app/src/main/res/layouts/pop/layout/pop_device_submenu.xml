<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_240"
    android:layout_height="@dimen/dp_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/btn_white_round_15_background">

    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_80"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_clock_sp"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/iv_pop_device_submenu_clock_sp"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/eject_icon_spms_default"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="锁屏模式"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_clock"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/iv_pop_device_submenu_clock"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/eject_icon_sjms_default"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="锁机模式"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_clock_span"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/iv_pop_device_submenu_clock_span"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:src="@mipmap/eject_icon_sypms_default"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="锁盘模式"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />
        </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_80"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_stolen"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/iv_pop_device_submenu_stolen"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/eject_icon_bdms_default"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="被盗模式"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_add"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/eject_icon_tjsb_default"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="添加设备"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pop_device_submenu_destory"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:gravity="center"
                android:background="@drawable/btn_gray_oval_background">
                <ImageView
                    android:id="@+id/iv_pop_device_submenu_destory"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@mipmap/eject_icon_sjxh_default"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="数据销毁"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/text_default"
                />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>