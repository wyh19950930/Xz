<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_300"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:orientation="vertical"
        android:background="@drawable/btn_white_round_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#F5F5F5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_select_c_cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_20"
                android:gravity="left|center"
                android:text="取消"
                android:textSize="@dimen/sp_16"
                android:textColor="#057DFF"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="城市选择"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_pop_select_c_commit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_20"
                android:gravity="right|center"
                android:text="确定"
                android:textSize="@dimen/sp_16"
                android:textColor="#057DFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_pop_select_c_province"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rlv_pop_select_c_city"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>